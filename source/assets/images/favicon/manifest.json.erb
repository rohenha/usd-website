<% favicon_folder = "favicon/" %>
{
  "short_name": "<%= config[:site_name] %>",
  "name": "<%= config[:site_name] %>",
  "icons": [
    {
      "src": "<%= image_path("#{favicon_folder}favicon-192.png") %>",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "<%= image_path("#{favicon_folder}favicon-512.png") %>",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "start_url": "/",
  "background_color": "<%= config[:site_color] %>",
  "display": "standalone",
  "scope": "/",
  "theme_color": "<%= config[:site_color] %>"
}
